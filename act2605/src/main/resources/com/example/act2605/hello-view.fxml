<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.act2605.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText"/>
    <TextField fx:id="titleField" promptText="Title"/>
    <TextField fx:id="authorField" promptText="Author"/>
    <TextField fx:id="releaseDateField" promptText="Release Date"/>
    <TextField fx:id="genreField" promptText="Genre"/>
    <TextField fx:id="actorsField" promptText="Actors"/>
    <Button text="Save" onAction="#onSaveButtonClick"/>

    <TableView fx:id="movieTable" prefHeight="200">
        <columns>
            <TableColumn text="Title" fx:id="titleColumn"/>
            <TableColumn text="Author" fx:id="authorColumn"/>
            <TableColumn text="Release Date" fx:id="releaseDateColumn"/>
            <TableColumn text="Genre" fx:id="genreColumn"/>
            <TableColumn text="Actors" fx:id="actorsColumn"/>
        </columns>
    </TableView>
</VBox>
